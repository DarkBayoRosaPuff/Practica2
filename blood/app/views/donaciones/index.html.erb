<h1>Lista de peticiones</h1>
<%= link_to 'Nueva petición', new_donacione_path, style: "color:#33FFFF" %>
<table>
  <tr>
    <th>Nombre</th>
    <th>Tipo de sangre</th>
    <th>Número de donadores</th>
    <th>Hospital</th>
  </tr>
 
  <% @donaciones.each do |donacione| %>
    <tr>
      <td><%= donacione.nombre%></td>
      <td><%= donacione.sangre %></td>
      <td><%= donacione.donadores %></td>
      <td><%= donacione.nombre_hospital %></td>
    </tr>
  <% end %>
</table>
