<h2>Formulario de registro</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

 <div class="field">
    <h3><%= f.label :nombre,"Nombre:"%></h3>
    <%= f.text_field :nombre, autofocus: false, placeholder: "Nombre de Usuario" %>
  </div>

 <div class="field">
    <h3><%= f.label :telefono,"Teléfono:"%></h3>
    <%= f.text_field :telefono, autofocus: false,placeholder: "Teléfono de contacto" %>
  </div>

 <div class="field">
    <h3><%= f.label :sangre,"Tipo de Sangre:"%></h3>
    <%= f.text_field :sangre, autofocus: false,placeholder: "Sangre del Usuario" %>
  </div>

  <div class="field">
    <h3><%= f.label :email,"Correo Electrónico:"%></h3>
    <%= f.email_field :email, autofocus: true,placeholder: "Correo para registro" %>
  </div>

  <div class="field">
    <h3><%= f.label :password,"Contraseña:"%></h3>
    <%= f.password_field :password, autocomplete: "off",placeholder: "Contraseña" %>
  </div>

  <div class="field">
    <h3><%= f.label :password_confirmation,"Confirma Contraseña:"%></h3>
    <%= f.password_field :password_confirmation, autocomplete: "off",placeholder: "Confirmación" %>
  </div>

  <br />

  <div class="actions">
    <%= f.submit "Finalizar" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
